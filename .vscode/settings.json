{
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "tsconfig.json": "tsconfig.*.json, env.d.ts",
    "vite.config.*": "jsconfig*, vitest.config.*, cypress.config.*, playwright.config.*",
    "package.json": "package-lock.json, pnpm*, .yarnrc*, yarn*, .eslint*, eslint*, .oxlint*, oxlint*, .prettier*, prettier*, .editorconfig"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#b262f0",
    "activityBar.background": "#b262f0",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#f1b86e",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#b262f0",
    "statusBar.background": "#9b34eb",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#b262f0",
    "statusBarItem.remoteBackground": "#9b34eb",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#9b34eb",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#9b34eb99",
    "titleBar.inactiveForeground": "#e7e7e799",
    "tab.activeBorderTop": "#8fe77e", // azul VS Code por defecto
    "tab.activeBorder": "#8fe77e", // subrayado en la parte inferior
    "tab.activeBorderBottom": "#8fe77e" // si prefieres abajo
  },
  "peacock.color": "#9b34eb"
}
